{
	"manifest_version": 2,
	"name": "Page language",
	"author": "Nmlgc",
	"description": "Defines a variable that contains the current page content language",
	"type": "variable",
	"requires": {
		"MediaWiki": ">= 1.29.0"
	},
	"ExtensionMessagesFiles": {
		"PageLangMagic": "PageLang.i18n.magic.php"
	},
	"Hooks": {
		"ParserGetVariableValueSwitch": "PageLang::onParserGetVariableValueSwitch",
		"MagicWordwgVariableIDs": "PageLang::onMagicWordwgVariableIDs"
	},
	"AutoloadClasses": {
		"PageLang": "PageLang.php"
	}
}
